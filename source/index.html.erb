---
layout: homepage
---

<% content_for(:head) do %>
  <%= dato_meta_tags(dato.homepage) %>
<% end %>

<div id="carousel--homepage" class="row row-eq-height carousel align-items-center slide fill-vertical" data-ride="carousel">
  <div class="carousel-inner col-sml-12 col-md-10 mx-auto">
    <% dato.homepage.carousel_images.each.with_index do |p,i| %>
      <div class="carousel-item <%= 'active' if i == 0 %>">
        <%= image_tag(p.url(h: 900), class: "carousel--image border img-fluid d-block mx-auto") %> 
      </div>
    <% end %>
  </div>
    <a class="carousel-control-prev" href="#carousel--homepage" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel--homepage" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
</div>

